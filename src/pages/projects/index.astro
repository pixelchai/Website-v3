---
import Layout from "@/layouts/Layout.astro";
import { dateSorter } from "@/utils/collectionUtils";
import Image from "astro/components/Image.astro";
import { getCollection } from "astro:content";

import src from "/res/content/snake-ai/thumb.gif";
import { Picture, getImage } from "astro:assets";

const entries = (await getCollection("projects")).sort(dateSorter);

const optimised = await getImage({
  src: src,
  formats: ["avif", "webp", "jpg"],
  // densities: [0.25],
  widths: [200],
});
---

<Layout>
  <h1>Projects</h1>
  <ul>
    {
      entries.map((entry) => (
        <li>
          {/* <img src={entry.data.thumb} alt={entry.data.title} /> */}
          <>
            {/* {entry.data.thumb && (
              <Image
                src={entry.data.thumb}
                alt={entry.data.title}
                width={200}
                height={200}
              />
            )} */}
            <Picture
              src={src}
              alt={entry.data.title}
              formats={["avif"]}
              densities={[0.5, 1, 1.5, 2]}
            />
            {/* <img src={optimised.srcSet.values[0].url} alt={entry.data.title} /> */}
            {/* {console.log(optimised)} */}
          </>
          <a href={`/projects/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
