---
import NavbarLink from "./NavbarLink.astro";
import PZLogo from "./PZLogo.astro";

const pathname = Astro.url.pathname;
---

<nav
  role="navigation"
  class="bg-light text-dark
    w-full h-navbar
    fixed z-50"
>
  <div
    class="page-x w-full h-full
        flex flex-row items-center gap-2 justify-between"
  >
    <!-- Logo and text -->
    <div>
      <a
        class="flex-0 flex flex-row gap-2
      justify-start items-center"
        href="/"
        aria-label="Home"
        ><PZLogo class="h-7" />
        <h2 class="text-2xl font-bold m-0 p-0">pixelchai</h2>
      </a>
    </div>
    <!-- Links -->
    <div class="flex-0">
      <ul class="flex flex-row gap-2 justify-end items-center list-none">
        <li>
          <NavbarLink selected={true} href="/">Home</NavbarLink>
        </li>
        <li>
          <NavbarLink href="/projects/">Projects</NavbarLink>
        </li>
        <li>
          <NavbarLink href="/articles/">Articles</NavbarLink>
        </li>
      </ul>
    </div>
  </div>
</nav>
