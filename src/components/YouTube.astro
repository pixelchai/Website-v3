---
import { combineClasses } from "@/utils/markupUtils";
import { YouTube as YouTubeExt } from "@astro-community/astro-embed-youtube";

export type Props = Parameters<typeof YouTubeExt>[0];
const props = Astro.props as Props;
---

<YouTubeExt {...props} class={combineClasses(props.class, "youtube-wrapper")} />

<style is:global>
  lite-youtube {
    max-width: none;
  }
</style>
