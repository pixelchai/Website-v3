---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import { site } from "@/data/consts";
import "@/styles/main.css";
import { addTrailingSlash } from "@/utils/misc";

export type Props = {
  title?: string;
  description?: string;
};

const props = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- favicon -->
    <link
      rel="icon"
      type="image/png"
      href={`${site.base}/favicon-96x96.png`}
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href={`${site.base}/favicon.svg`} />
    <link rel="shortcut icon" href={`${site.base}/favicon.ico`} />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={`${site.base}/apple-touch-icon.png`}
    />
    <meta name="apple-mobile-web-app-title" content="pixelchai" />
    <link rel="manifest" href={`${site.base}/site.webmanifest`} />

    <!-- SEO -->
    <title>
      {props.title ? `${props.title} â€” ${site.title}` : site.title}
    </title>
    <meta name="description" content={props.description || site.description} />
    <link
      rel="canonical"
      href={site.url + addTrailingSlash(Astro.url.pathname)}
    />
    {
      site.keywords && (
        <meta name="keywords" content={site.keywords.join(", ")} />
      )
    }
    <meta name="robots" content="index,follow" />
    <meta name="author" content={site.me.name} />
    <meta name="generator" content={Astro.generator} />

    <!-- Katex -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css"
      integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-light text-dark h-full">
    <!-- navbar -->
    <Navbar />
    <div class="page-x pt-navbar">
      <div class="page-y">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
